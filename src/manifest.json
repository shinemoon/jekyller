{
  "manifest_version": 2,
  "name": "Jekyller Blog Editor",
  "short_name": "Jekyller",
  "description": "To support writing, editing and managing the github.io based Jekyll Blog, with Markdown Previewer.",
  "version": "1.0",
  "minimum_chrome_version": "33",
  "icons": {
    "16": "assets/icon_512.png",
    "128": "assets/icon_512.png"
  },
    "browser_action": {
        "default_icon": "assets/icon_512.png",
        "default_title": "Jeykller"
    },
    "background":{
        "page":"background.html",
        "persisitent": true
    },
 "permissions": [
	"storage",
  	"notifications",
    "unlimitedStorage",
    "identity",
	"<all_urls>"
  ]
}
